<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th>Deadline</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% experiences.forEach(function(e) { %>
      <tr>
        <td><%= e.name %></td>
        <td><%= e.created %></td>
        <td><%= e.deadline	 %></td>
        <td><%= e.location %></td>
        <td><a href="/experiences/<%= e._id %>">DETAILS</a></td>
        <td><form method="POST" action="/experiences/<%= e._id %>?_method=DELETE" class="delete-form">
          <button type="submit" class="delete-experience-button">Delete Item</button></form></td>
      </tr>
      <% }); %>
    </tbody>
  </table>


<%- include('../partials/footer') %> 