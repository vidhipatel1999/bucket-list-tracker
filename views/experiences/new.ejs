<body class="newExperienceBody">
  <%- include('../partials/header') %>

  <form action="/experiences" method="POST" class="experiences-form">
    <h1 class="h1-experiences-new">Add Your Next Adventure Here...</h1>
    <label class="experiences-name-label">
      Name:
      <input type="text" name="name" />
    </label>
    <label class="experiences-created-label">Created on:
      <input type="date" name="created" class="experiences-date" />
    </label>
    <label>Target Deadline: <input type="date" name="deadline" class="experiences-deadline-date"> </label>
    <label>Location: <input type="text" name="location" class="experiences-location"> </label>
    <button type="submit" class="add-experience-button">Add Experience</button>
  </form>

  <%- include('../partials/footer') %>
</body>

